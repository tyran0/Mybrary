<div class="form_field">
    <label class="form_label">Title</label>
    <input class="form_input" type="text" name="title" value="<%= book.name %>">    
</div>
<div class="form_field">
    <label class="form_label">Author</label>
    <select class="form_select" name="author">
        <% authors.forEach(author => { %>
            <% if (author.id = book.author) { %>
                <option selected label="<%= author.name %>" value="<%= author.id %>"></option>         
            <% } else { %>
                <option label="<%= author.name %>" value="<%= author.id %>"></option> 
            <% } %> 
        <% }) %>>
    </select>    
</div>
<div class="form_field">
    <label class="form_label">Publish Date</label>
    <input class="form_input" type="date" name="publishDate"
        value="<%= book.publishDate == null ? '' :
        book.publishDate.toISOString().split('T')[0] %>">    
</div>
<div class="form_field">
    <label class="form_label">Page Count</label>
    <input class="form_input" type="number" name="pageCount" min="1" value="<%= book.pageCount %>">    
</div>
<div class="form_field">
    <label class="form_label">Cover Image</label>
    <input class="form_input" type="file" id="cover" name="cover">    
</div>
<div class="form_field">
    <label class="form_label">Description</label>
    <textarea class="form_input" name="description" value="<%= book.description %>"></textarea>    
</div>